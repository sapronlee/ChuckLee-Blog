<div class="top_corner"></div>
<div class="content">
  <div class="imgbox">
    <a href="#"><%= theme_image_tag("myworks.gif") %></a>
  </div>
  
  <div class="box">
    <h3>RECENT COMMENTS</h3>
    <ul>
      <% cache "sidebar_cecent_comment.default" do -%>
        <% @recent_comments.each do |c| -%>
          <li><a href="<%= "#{slug_post_path(c.commentable)}#comment_#{c.id}" %>" title="<%= c.comment %>"><%= c.comment %></a></li>
        <% end -%>
      <% end -%>
    </ul>
  </div>

  <div class="box">
    <h3>CATEGORIES</h3>
    <ul>
      <% cache "sidebar_categories.default" do -%>
        <% @categories.each do |c| -%>
          <li><a href="<%= category_path(c.alias) %>" title="<%= c.name %>"><%= c.name %></a></li>
        <% end -%>
      <% end -%>
    </ul>
  </div>

  <div class="box">
    <h3>RECENT POSTS</h3>
    <ul>
      <% cache "sidebar_cecent_posts.default" do -%>
        <% @recent_posts.each do |p| -%>
          <li><a href="<%= slug_post_path(p) %>" title="<%= p.title %>"><%= p.title %></a></li>
        <% end -%>
      <% end -%>
    </ul>
  </div>

  <div class="box">
    <h3>TAGS</h3>
    <div id="tags">
      <% cache "sidebar_tags.default" do -%>
        <% tag_cloud(@tags, %w(tc1 tc2 tc3 tc4 tc5)) do |tag, css_class| %>
          <a href="<%= tag_path(tag.name) %>" title="<%= tag.name %>" class="<%= css_class %>">
            <%= tag.name %>
          </a>
        <% end -%>
      <% end -%>
      <a href="<%= tags_path %>" class="more">move Â»</a>
    </div>
  </div>

</div>
<div class="bottom_corner"></div>