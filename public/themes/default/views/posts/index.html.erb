<%= title("Home") %>
<div class="top_corner"></div>
<div class="content">
  <% if !@posts.blank? -%>
    <% @posts.each do |p| %>
      <div class="post">
        <h2><a href="<%= slug_post_path(p) %>"><%= p.title %></a></h2>
        <div class="post_info clearfix">
          <span class="post_date"><%= p.created_at %></span>
          <span class="post_comments"><a href="#">22 Comments »</a></span>
        </div>
        <div class="post_body">
          <p><%= p.summary %></p>
        </div>
        <div class="post_meta clearfix">
          <span class="post_categories"><a href="#"><%= p.category.name %></a></span>
          <span class="post_tags">
            <a href="#">tag 1</a>
          </span>
        </div>
      </div>
    <% end -%>
  <% else -%>
    <p class="empty">你还没有添加文章</p>
  <% end -%>
</div>
<div class="bottom_corner"></div>