<%= title("Home") %>
<% if !@posts.blank? -%>
  <% @posts.each do |p| %>
    <div class="post">
      <h2><a href="<%= slug_post_path(p) %>" title="<%= p.title %>"><%= p.title %></a></h2>
      <div class="post_info clearfix">
        <span class="post_date"><%= l(p.created_at, :format => :long) %></span>
        <span class="post_comments"><a href="#" title="共 22 个评论">22 Comments »</a></span>
      </div>
      <div class="post_body">
        <%= raw p.summary %>
      </div>
      <div class="post_meta clearfix">
        <span class="post_categories"><a href="#" title="<%= p.category.name %>"><%= p.category.name %></a></span>
        <% if !p.tag_list.blank? -%>
        <span class="post_tags">
            <% p.tag_list.each_with_index do |t, i| -%>
              <a href="#" title="<%= t %>"><%= t %></a><%= "," if i != p.tag_list.length - 1 -%>
            <% end -%>
          </span>
        <% end -%>
      </div>
    </div>
  <% end -%>
<% else -%>
  <p class="empty">你还没有添加文章</p>
<% end -%>  
