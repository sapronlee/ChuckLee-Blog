<% title "修改用户资料" %>
<%= render "base" %>
<% content_for :sitemaps do -%>
  <span>修改资料</span>
<% end -%>
<div class="clomn_type_one">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :novalidate => true, :method => :put }) do |f| %>
  <%= f.input :login, :label => '用户名', :required => false, :disabled => true, :hint => '不能改变用户名', :input_html => { :size => 30 } %>
  <%= f.input :email, :hint => '必须填写邮箱', :input_html => { :size => 30 } %>
  <%= f.input :password, :label => '新密码', :hint => '如果你不修改密码请留空', :required => false %>
  <%= f.input :password_confirmation %>
  <%= f.input :current_password, :label => '旧密码', :hint => '必须输入旧密码才能提交' %>
  <div class="actions">
    <%= f.button :submit, "提交" %>
  </div>
<% end -%>
</div>