<% content_for :base_sitemaps do -%>
  <a href="<%= admin_user_registrations_path %>">用户</a>
  <span class="space_mark">»</span>
<% end -%>
<% content_for :styles do -%>
<% end -%>
<% content_for :tools do -%>
  <div class="menu">
    <%= spaceless do -%>
      <a href="<%= admin_user_registrations_path %>" class="button group left<%= ' checked' if action_name == "index" %>">用户列表</a>
      <% if ["edit", "update"].index(action_name) -%>
        <a href="<%= edit_admin_user_registration(@user) %>" class="button group checked">修改用户</a>
      <% end -%>
      <a href="<%= new_admin_user_registration_path %>" class="button group right<%= ' checked' if ["new", "create"].index(action_name) %>">创建用户</a>
    <% end -%>
  </div>
<% end -%>