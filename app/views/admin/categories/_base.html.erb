<% content_for :base_sitemaps do -%>
  <a href="<%= admin_categories_path %>">分类</a>
  <span class="space_mark">»</span>
<% end -%>
<% content_for :tools do -%>
  <div class="menu">
    <%= spaceless do -%>
      <a href="<%= admin_categories_path %>" class="button group left<%= ' checked' if ["index", "search"].index(action_name) %>">列表</a>
      <% if ["edit", "update"].index(action_name) -%>
        <a href="<%= edit_admin_category_path(@category) %>" class="button group checked">修改分类</a>
      <% end -%>
      <a href="<%= new_admin_category_path %>" class="button group right<%= ' checked' if ["new", "create"].index(action_name) %>">创建分类</a>
    <% end -%>
  </div>
  <% if ["index", "search"].index(action_name) -%>
    <div class="search">
      <form action="<%= search_admin_categories_path %>" method="post">
        <%= auth_token %>
        <input maxlength="50" class="input" name="name" autocomplete="off" placeholder="搜索的分类目录" type="search" value="<%= params[:name] %>" />
        <input class="button" type="submit" value="搜索" />
      </form>
    </div>
  <% end -%>
<% end -%>