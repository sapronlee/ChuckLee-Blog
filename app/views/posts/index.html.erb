<% title("home") %>
<div id="posts">
  <% if !@posts.blank? -%>
    <% @posts.each do |p| -%>
      <div class="post clearfix">
        <div class="cover"><a href="<%= slug_post_path(p) %>" title="<%= p.title %>"><%= image_tag "default/timthumb.jpg", :alt => p.title %></a></div>
        <div class="important">
          <div class="title">
            <h2><a href="<%= slug_post_path(p) %>" title="<%= p.title %>"><%= p.title %></a></h2>
            <div class="meta">
              <div class="metabox comment"><a href="#" title="0 Comments">0 Comments</a></div>
              <div class="metabox time"><%= l(p.created_at.to_date, :format => :long) %></div>
              <div class="metabox author">SapronLee</div>
            </div>
          </div>
          <div class="body"><%= raw(p.body) %></div>
        </div>
        <div class="read_more">
          <span><a href="<%= slug_post_path(p) %>" title="阅读">Continue</a></span>
        </div>
      </div>
    <% end -%>
  <% end -%>
</div>