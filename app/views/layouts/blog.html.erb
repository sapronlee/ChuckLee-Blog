<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title><%= yield :title || Setting.site_name %></title>
  <link href="http://fonts.googleapis.com/css?family=Cabin+Sketch:bold" rel="stylesheet" type="text/css">
  <%= stylesheet_link_tag :defaults %>
  <%= yield :styles %>
  <%= javascript_include_tag :defaults %>
  <%= yield :scripts %>
  <%= csrf_meta_tag %>
</head>
<body id="<%= current_controller_and_action_name %>">
  <div id="wrapper">
    <div id="wrapper_2">
      <div id="header" class="clearfix">        
        <h1 class="logo"><a href="<%= root_path %>"><%= Setting.site_name %></a></h1>          
        <div id="nav" class="clearfix">
          <ul>
            <li><a href="<%= root_path %>">Home</a></li>
            <li><a href="<%= root_path %>">Blog</a></li>
          </ul>
        </div>
      </div>
      <div id="main" class="clearfix">
        <div id="main_wrapper">
          <div class="content">
            <div class="top_corner"></div>
            <%= yield %>
            <div class="bottom_corner"></div>
          </div>
        </div>
        <div id="sidebar_wrapper"></div>
      </div>
      <div id="footer" class="clearfix">        
          <div class="left">
            Copyright Â© <%= Setting.site_name %> .Valid <a href="http://validator.w3.org/check?uri=referer" target="_blank">XHTML</a>.
          </div>
          <div class="right">
            Powered by <a href="<%= root_path %>">Chuck-Blog</a>, Designed by <a href="<%= root_path %>">ChuckLee</a>.
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>