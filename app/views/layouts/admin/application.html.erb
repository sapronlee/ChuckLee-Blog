<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title || Setting.site_name %></title>
  <meta charset="utf-8">
  <%= stylesheet_link_tag "reset", "960", "admin_base", :cache => "cached/admin/application" %>
  <%= yield :styles %>
  <%= javascript_include_tag :defaults, :cache => "cached/admin/application" %>
  <%= yield :scripts %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header_container">
      <div id="header" class="container_16 relative">
        <h1><a href="<%= admin_root_path %>"><%= Setting.app_name %></a></h1>
        <div id="navigation">
          <ul class="clearfix">
            <li><a href="<%= admin_root_path %>"<%= ' class=current' if params[:controller] == "admin/home" %>>首页</a></li>
            <li><a href="<%= admin_categories_path %>"<%= ' class=current' if params[:controller] == "admin/categories" %>>分类</a></li>
            <li><a href="<%= admin_settings_path %>"<%= ' class=current' if params[:controller] == "admin/settings" %>>设置</a></li>
          </ul>
        </div>
        <div id="users">
          <span class="greeting">welcome！</span>
          <span class="name">sapronlee</span>
          <a href="#" class="logout">退出</a>
        </div>
      </div>
    </div>
    <div id="main_container" class="container_12">
      <div id="main">
        <div id="sitemaps">
          <span class="prompt">当前位置:</span>
          <a href="<%= admin_root_path %>">后台管理</a>
          <span class="space_mark">»</span>
          <%= yield :base_sitemaps %>
          <%= yield :sitemaps %>
        </div>
        <div class="tools">
        <%= spaceless do -%>
          <%= yield :tools %>
        <% end -%>
        </div>
        <% if !notice.blank? %>
          <div class="massage notice"><%= notice %></div>
        <% end -%>
        <% if !alert.blank? %>
          <div class="massage alert"><%= alert %></div>
        <% end -%>
        <%= yield %>
      </div>      
  </div>
</body>
</html>